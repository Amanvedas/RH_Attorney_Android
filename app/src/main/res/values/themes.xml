<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RH_Attorney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryVariant">@color/toolbar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/toolbar_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">#5752758B</item>
        <item name="colorControlActivated">#C452758B</item>
        <item name="colorControlHighlight">#8052758B</item>
    </style>

    <style name="RalewayTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="hintText">
        <item name="android:textColorHint">#97ACB9</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:opacity">opaque</item>
        <item name="android:textSize">10.5sp</item>
    </style>
    <style name="editText">
        <item name="android:textColorHint">#97ACB9</item>
        <item name="android:textColor">@color/toolbar_color</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="profile_hintText">
        <item name="android:textColorHint">#97ACB9</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/toolbar_color</item>
    </style>
    <style name="profile_editText">
        <item name="android:textColorHint">#97ACB9</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="NavigationItemNoRipple">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">47dp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/toolbar_color</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="headerText" parent="Widget.AppCompat.TextView">


        <item name="android:textColor">@color/toolbar_color</item>
        <item name="fontFamily">@font/merriweather_bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="weekDaysText" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/toolbar_color</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">

        <item name="android:textColor">@drawable/my_date_text</item>
        <item name="fontFamily">@font/proximanova_alt_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>


