<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_toLeftOf="@id/img_cancel"
        android:background="@drawable/blue_line_boarder"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/txt_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/toolbar_color"
                android:text="Name :"
                android:fontFamily="@font/merriweather_regular"
                />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX"
                android:textColor="@color/toolbar_color"
                android:fontFamily="@font/merriweather_regular"
                android:singleLine="true"
                android:layout_toRightOf="@id/txt_title_name"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/txt_title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:layout_margin="5dp"
                android:textColor="@color/toolbar_color"
                android:fontFamily="@font/merriweather_regular"
                android:layout_below="@id/txt_name"
                />
            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXxx@gmail.com"
                android:layout_below="@id/txt_name"
                android:singleLine="true"
                android:textColor="@color/toolbar_color"
                android:fontFamily="@font/merriweather_regular"
                android:layout_toRightOf="@id/txt_title_email"
                android:layout_margin="5dp"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>