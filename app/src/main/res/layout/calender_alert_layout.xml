<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/lay_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/cancel_blue"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_back"
            android:layout_marginTop="30dp"
            >
            <ImageView
                android:id="@+id/img_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donald Eby, your meeting \n is scheduled successfully."
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_cal"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/toolbar_color"
                android:layout_marginTop="25dp"
                />
            <LinearLayout
                android:id="@+id/lay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_detail"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 am"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/proximanova_alt_bold"
                    android:textColor="@color/toolbar_color"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/btn_yellow"
                    android:layout_margin="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Manish Dhakal"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_margin="10dp"
                    android:textColor="@color/toolbar_color"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/toolbar_color"
                android:fontFamily="@font/merriweather_regular"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:textSize="13sp"
                android:layout_below="@id/lay_time"
                android:layout_centerHorizontal="true"
                android:text="Wednesday, Nov 18, 2020 \n United States; Mountain time (GMT-7:00)"
                />
            <ImageView
                android:id="@+id/img_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/done"
                android:layout_below="@id/txt_day"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>