<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.rafayee.RH.Forgot.View.ForgotActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="32dp"
                android:src="@drawable/back_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="84dp"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center_horizontal"
                    android:text="Forgot Password"
                    android:textColor="@color/toolbar_color"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="53dp"
                    android:src="@drawable/image_fp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginRight="70dp"
                    android:fontFamily="@font/raleway_regular"
                    android:gravity="center"
                    android:text="Enter the Email ID associated with your account"
                    android:textColor="@color/toolbar_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="70dp"
                    android:alpha="0.5"
                    android:fontFamily="@font/raleway_regular"
                    android:gravity="center"
                    android:text="We'll send a verification code to reset your password"
                    android:textColor="@color/toolbar_color"
                    android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cardEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ENTER EMAIL ID"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="65dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/bg_edittext"
                        android:textColorHint="#97ACB9"
                        app:boxStrokeColor="@color/toolbar_color"
                        app:hintTextAppearance="@style/hintText"
                        app:hintTextColor="#97ACB9"
                        app:boxStrokeWidth="0dp"
                        app:startIconDrawable="@drawable/mail"
                        app:startIconTint="@color/toolbar_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:paddingLeft="16dp"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:textAppearance="@style/hintText"
                            android:textCursorDrawable="@null"
                            android:textEditSuggestionItemLayout="@color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="37dp"
                    android:paddingBottom="40dp"
                    android:src="@drawable/send" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>