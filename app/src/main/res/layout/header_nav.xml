<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_light_blue">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_pic"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/profile_ic"
        app:civ_border_color="#52758B"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#52758B"
        app:civ_shadow_gravity="center"
        app:civ_shadow_radius="2dp" />

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:src="@drawable/cancel_blue" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/raleway_extrabold"
        android:text="Manish Dhakal"
        android:textColor="#52758B"
        android:textSize="18sp" />
</RelativeLayout>