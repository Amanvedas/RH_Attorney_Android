<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:background="@drawable/blue_boarder">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/logo_2"
            android:clickable="false"/>
        <TextView
            android:id="@+id/txt_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_logo"
            android:fontFamily="@font/raleway_medium"
            android:textSize="13sp"
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Hi Manish! You have an upcoming consultation in 2 hours, click here to complete the additional questions to make your consultation more productive." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_disc"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="6dp"
                android:src="@drawable/clock_1"/>
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:text="12:00 AM" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>