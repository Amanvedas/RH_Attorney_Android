<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultationModule.ConsultationReviewActivity">
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_blue" />

    <LinearLayout

        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/img_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultation Results"
        android:textSize="20sp"
        android:textColor="@color/toolbar_color"
        android:fontFamily="@font/raleway_extrabold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Ask for a 5 star review?"
        android:fontFamily="@font/raleway_semibold"
        android:layout_marginTop="45dp"
        android:textColor="@color/toolbar_color"/>

    <TextView
        android:background="@drawable/cancel_options_boarder"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="yes"
        android:textColor="#3E454C"
        android:fontFamily="@font/raleway_semibold"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="13sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="35dp"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="35dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/txt_yes"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="YES"
                    android:textColor="#3E454C"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="13sp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="35dp"
            app:cardCornerRadius="35dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="NO"
                    android:textColor="#3E454C"
                    android:fontFamily="@font/raleway_semibold"
                    android:textSize="13sp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    <TextView
        android:background="@drawable/cancel_options_boarder"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="No"
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#3E454C"
        android:fontFamily="@font/raleway_semibold"
        android:layout_marginTop="25dp"
        android:textSize="13sp"/>
    </LinearLayout>

</RelativeLayout>