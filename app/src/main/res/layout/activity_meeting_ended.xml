<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentInfoModule.MeetingEndedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/img_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/done_2"
            />
        <TextView
            android:id="@+id/txt_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This meeting has ended"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_below="@id/img_done"
            android:fontFamily="@font/merriweather_bold"
            />
        <TextView
            android:id="@+id/txt_send"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Send Fee Agreement"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_meeting"
            android:padding="5dp"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:background="@drawable/btn_round_yellow"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Send Non-Retention"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_send"
            android:padding="5dp"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:background="@drawable/btn_round_transparent"
            />

    </RelativeLayout>

</RelativeLayout>