                android:id="@+id/unableAttendText"
                android:background="@drawable/cancel_options_boarder"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Unable to attend"
                android:textColor="#3E454C"
                android:fontFamily="@font/raleway_semibold"
                android:layout_marginTop="20dp"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/hiredAnotherAttorneyText"
                android:background="@drawable/cancel_options_boarder"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Hired another attorney"
                android:textColor="#3E454C"
                android:fontFamily="@font/raleway_semibold"
                android:layout_marginTop="20dp"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/otherText"
                android:background="@drawable/blue_round_boarder"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Other"
                android:textColor="#3E454C"
                android:fontFamily="@font/raleway_semibold"
                android:layout_marginTop="20dp"
                android:textSize="13sp"/>
            <EditText
                android:id="@+id/editText"
                android:visibility="visible"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableEnd="@drawable/ic_edit"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
