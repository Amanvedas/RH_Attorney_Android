<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fingerprintLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/topImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fingerprint_2" />

            <TextView
                android:id="@+id/idName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center_horizontal"
                android:text="Touch ID"
                android:textColor="@color/toolbar_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textSentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center_horizontal"
                android:text="To enable Touch ID please \n first login to R &amp; H"
                android:textColor="@color/toolbar_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/bottom_sheet_dialog_drawable"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <LinearLayout
                android:id="@+id/editTextLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginRight="40dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cardEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EMAIL"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_edittext"
                        android:textColorHint="#97ACB9"
                        app:boxStrokeColor="@color/toolbar_color"
                        app:hintTextAppearance="@style/hintText"
                        app:hintTextColor="#97ACB9"
                        app:boxStrokeWidth="0dp"
                        app:passwordToggleTint="@color/toolbar_color"
                        app:startIconDrawable="@drawable/mail"
                        app:startIconTint="@color/toolbar_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:paddingLeft="16dp"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:textAppearance="@style/hintText"
                            android:textCursorDrawable="@null"
                            android:textEditSuggestionItemLayout="@color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cardPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PASSWORD"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_edittext"
                        android:textColorHint="#97ACB9"
                        app:boxStrokeColor="@color/toolbar_color"
                        app:hintTextAppearance="@style/hintText"
                        app:hintTextColor="#97ACB9"
                        app:boxStrokeWidth="0dp"
                        app:passwordToggleDrawable="@drawable/eye_on_off"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/toolbar_color"
                        app:startIconDrawable="@drawable/icon_feather_lock"
                        app:startIconTint="@color/toolbar_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:paddingLeft="16dp"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:textAppearance="@style/hintText"
                            android:textCursorDrawable="@null"
                            android:textEditSuggestionItemLayout="@color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/raleway_medium"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:text="FORGOT"
                    android:textColor="@color/toolbar_color"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back" />

                    <ImageView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/login1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fingerPrintLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/bottomImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/fingerprint_3" />

                <TextView
                    android:id="@+id/hintTextSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/raleway_medium"
                    android:text="Touch the fingerprint sensor"
                    android:textColor="@color/toolbar_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>